---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('posts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3);

const writeups = (await getCollection('writeups')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 3);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			.intro {
				margin-bottom: 3rem;
				padding: 2rem 0;
				border-bottom: 1px solid rgb(var(--border-color));
			}
			.intro h1 {
				margin: 0 0 1rem 0;
				font-size: 2.5rem;
			}
			.intro p {
				font-size: 1.1rem;
				line-height: 1.6;
				color: rgb(var(--text-primary));
				margin: 0.5rem 0;
			}
			.social-links {
				display: flex;
				gap: 1rem;
				margin-top: 1.5rem;
			}
			.social-links a {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.5rem 1rem;
				color: var(--accent);
				text-decoration: none;
				border: 1px solid var(--accent);
				border-radius: 4px;
				transition: all 0.2s ease;
			}
			.social-links a:hover {
				background-color: var(--accent);
				color: white;
			}
			.social-links svg {
				width: 20px;
				height: 20px;
			}
			.section-header {
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 1.5rem;
			}
			.section-header h2 {
				margin: 0;
				font-size: 1.8rem;
			}
			.view-all {
				font-size: 1rem;
				color: rgb(var(--accent));
				text-decoration: none;
				transition: color 0.2s ease;
			}
			.view-all:hover {
				text-decoration: underline;
			}
			.content-section {
				margin-bottom: 3rem;
			}
			ul {
				display: flex;
				flex-direction: column;
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				border: 1px solid rgb(var(--border-color));
				border-radius: 8px;
				padding: 1.5rem;
				background-color: rgb(var(--bg-secondary));
				transition: all 0.2s ease;
			}
			ul li:hover {
				box-shadow: var(--box-shadow);
				border-color: rgb(var(--accent));
			}
			ul li a {
				display: flex;
				gap: 1.5rem;
				text-decoration: none;
				color: inherit;
			}
			.post-image {
				flex-shrink: 0;
				width: 200px;
				height: 120px;
				border-radius: 4px;
				overflow: hidden;
			}
			.post-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
			.post-content {
				flex: 1;
				min-width: 0;
			}
			.title {
				margin: 0 0 0.5rem 0;
				font-size: 1.3rem;
				color: rgb(var(--text-primary));
				line-height: 1.3;
			}
			.description {
				margin: 0.5rem 0;
				color: rgb(var(--text-secondary));
				line-height: 1.5;
			}
			.date {
				margin: 0.5rem 0 0 0;
				color: rgb(var(--text-secondary));
				font-size: 0.9rem;
			}
			ul li a:hover .title {
				color: rgb(var(--accent));
			}
			@media (max-width: 720px) {
				main {
					width: 100%;
				}
				.intro h1 {
					font-size: 2rem;
				}
				.intro p {
					font-size: 1rem;
				}
				ul li a {
					flex-direction: column;
					gap: 1rem;
				}
				.post-image {
					width: 100%;
					height: 180px;
				}
				.section-header {
					flex-direction: column;
					align-items: flex-start;
					gap: 0.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="intro">
				<h1>Heya, I'm Dimitar</h1>
				<p>
					I'm an offensive security consultant, developer, and CTF player with <a href="https://adminions.ca/">ADMinions</a>. 
					I write about security research, reverse engineering, OSINT, share CTF writeups and other random things.
				</p>
				<p>
					Interested in vulnerability research, malware analysis, and breaking things to understand how they work.
				</p>
				<div class="social-links">
					<a href="https://www.linkedin.com/in/dimitar-ganev-syl-/" target="_blank">
						<svg viewBox="0 0 16 16" aria-hidden="true"
							><path
								fill="currentColor"
								d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.567-.878 1.228-.878.866 0 1.213.66 1.213 1.628v3.993h2.401V9.25c0-2.213-1.181-3.242-2.756-3.242-1.292 0-1.86.722-2.17 1.509h.016V6.169h-2.4c.03.678 0 7.225 2.4 7.225z"
							></path></svg
						>
						<span>LinkedIn</span>
					</a>
					<a href="https://github.com/syrull" target="_blank">
						<svg viewBox="0 0 16 16" aria-hidden="true"
							><path
								fill="currentColor"
								d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
							></path></svg
						>
						<span>GitHub</span>
					</a>
				</div>
			</section>

			<section class="content-section">
				<div class="section-header">
					<h2>Recent Posts</h2>
					<a href="/posts/" class="view-all">View all posts →</a>
				</div>
				<ul>
					{posts.map((post) => (
						<li>
							<a href={`/posts/${post.id}/`}>
								{post.data.heroImage && (
									<div class="post-image">
										<Image width={200} height={120} src={post.data.heroImage} alt="" />
									</div>
								)}
								<div class="post-content">
									<h3 class="title">{post.data.title}</h3>
									{post.data.description && (
										<p class="description">{post.data.description}</p>
									)}
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</div>
							</a>
						</li>
					))}
				</ul>
			</section>

			<section class="content-section">
				<div class="section-header">
					<h2>Recent CTF Writeups</h2>
					<a href="/writeups/" class="view-all">View all writeups →</a>
				</div>
				<ul>
					{writeups.map((writeup) => (
						<li>
							<a href={`/writeups/${writeup.id}/`}>
								{writeup.data.heroImage && (
									<div class="post-image">
										<Image width={200} height={120} src={writeup.data.heroImage} alt="" />
									</div>
								)}
								<div class="post-content">
									<h3 class="title">{writeup.data.title}</h3>
									{writeup.data.description && (
										<p class="description">{writeup.data.description}</p>
									)}
									<p class="date">
										<FormattedDate date={writeup.data.pubDate} />
									</p>
								</div>
							</a>
						</li>
					))}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
