---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/posts">Posts</HeaderLink>
			<HeaderLink href="/writeups">Writeups</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="nav-actions">
			<ThemeToggle />
			<div class="social-links">
				<a href="https://www.linkedin.com/in/dimitar-ganev-syl-/" target="_blank">
					<span class="sr-only">Follow on LinkedIn</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.567-.878 1.228-.878.866 0 1.213.66 1.213 1.628v3.993h2.401V9.25c0-2.213-1.181-3.242-2.756-3.242-1.292 0-1.86.722-2.17 1.509h.016V6.169h-2.4c.03.678 0 7.225 2.4 7.225z"
						></path></svg
					>
				</a>
				<a href="https://github.com/syrull" target="_blank">
					<span class="sr-only">Go to GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
						><path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path></svg
					>
				</a>
			</div>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background-color: rgb(var(--header-bg));
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background-color 0.3s ease;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: rgb(var(--text-primary));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color 0.3s ease, border-color 0.3s ease;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.nav-actions {
		display: flex;
		align-items: center;
		gap: 1rem;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	.social-links a {
		color: rgb(var(--text-primary));
		transition: color 0.3s ease;
	}
	.social-links a:hover {
		color: var(--accent);
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
